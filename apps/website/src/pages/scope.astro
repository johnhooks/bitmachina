---
import { ScopeExample } from "../components/scope-example";
---

<style>
	* {
		box-sizing: border-box;
	}
	html,
	body {
		margin: 0;
		width: 100%;
		font-family: Arial;
	}
	#canvas {
		position: absolute;
		top: 0;
		left: 0;
		background-color: #181818;
	}
	#controls {
		position: absolute;
		display: flex;
		flex-direction: column;
		top: 0;
		left: 0;
		z-index: 1;
		background-color: #6666;
		color: #fff;
		padding: 15px 15px 0 15px;
		border-radius: 10px;
		margin: 15px;
		font-size: 11px;
	}
	#controls button,
	#controls select {
		font-size: 11px;
		padding: 2px 0;
	}
	#controls select,
	#controls input,
	#controls #led {
		margin-bottom: 15px;
	}
	#controls button {
		border: 0;
	}
	#controls label {
		margin-bottom: 5px;
	}
	#led {
		height: 3px;
		background-color: #ee2233;
	}
	#led.on {
		background-color: #49cb61;
	}
</style>

